{
  "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
          "globalReturn": true,
          "impliedStrict": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true,
        "jquery": true,
        "browser": true,
        "webextensions": true,
        "shared-node-browser": true
    },
    "rules": {
      "eqeqeq":"error",
      "quotes": ["warn", "single"],
      "no-console":"off",
      "no-undef":"warn",
      "no-use-before-define":"warn",
      "no-unused-vars": "off",
      "semi":"error",
      "object-curly-spacing": [1, "always"]
    }
}